{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "resolveJsonModule": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["ESNext"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.spec.*"
    ]
  }